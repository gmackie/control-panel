# GMAC.IO Control Panel Environment Configuration
# Copy this file to .env.local and update the values

# =================================
# Application Configuration
# =================================
NODE_ENV=production
PORT=3000

# =================================
# Authentication (NextAuth.js)
# =================================
NEXTAUTH_URL=https://control.gmac.io
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl-rand-base64-32

# GitHub OAuth for authentication
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =================================
# Database Configuration
# =================================
DATABASE_URL=postgresql://username:password@localhost:5432/control_panel
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=control_panel
DATABASE_USER=control_panel_user
DATABASE_PASSWORD=strong-password-here

# =================================
# Redis Configuration
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =================================
# Integration URLs
# =================================
GITEA_URL=https://git.gmac.io
GITEA_TOKEN=your-gitea-api-token

DRONE_SERVER=https://ci.gmac.io
DRONE_TOKEN=your-drone-api-token

HARBOR_URL=https://registry.gmac.io
HARBOR_USERNAME=admin
HARBOR_PASSWORD=your-harbor-password

ARGOCD_SERVER=https://argocd.gmac.io
ARGOCD_TOKEN=your-argocd-api-token

# =================================
# Kubernetes Configuration
# =================================
K8S_API_SERVER=https://kubernetes.default.svc
K8S_TOKEN=your-k8s-service-account-token
KUBECONFIG=/path/to/kubeconfig

# =================================
# Monitoring Configuration
# =================================
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=https://grafana.gmac.io
GRAFANA_TOKEN=your-grafana-api-token

LOKI_URL=http://loki:3100
ALERTMANAGER_URL=http://alertmanager:9093

# =================================
# Webhook Configuration
# =================================
WEBHOOK_SECRET=your-webhook-validation-secret

# =================================
# Logging & Observability
# =================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
SENTRY_DSN=your-sentry-dsn-if-using-sentry

# =================================
# Security Configuration
# =================================
CORS_ORIGINS=https://control.gmac.io,https://gmac.io
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=15

# =================================
# Feature Flags
# =================================
ENABLE_MOCK_DATA=false
ENABLE_DEBUG_MODE=false
ENABLE_METRICS_ENDPOINT=true
ENABLE_HEALTH_ENDPOINT=true

# =================================
# Email Configuration (optional)
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=control-panel@gmac.io

# =================================
# Cloud Provider Configuration
# =================================
# AWS (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Hetzner (if using Hetzner Cloud)
HETZNER_API_TOKEN=your-hetzner-api-token

# =================================
# Development Configuration
# =================================
# Only used in development
NEXT_PUBLIC_API_URL=http://localhost:3000/api
DISABLE_AUTH=false